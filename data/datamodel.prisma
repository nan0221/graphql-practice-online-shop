type Product {
  id: ID! @unique
  name: String
  desc: String
  photo: String
  price: String
}


type Customer {
  id: ID! @unique
  email: String! @unique
  firstName: String
  lastName: String
  address: String
  phone: String
  password: String!
  # TODO encryption?
  productsByCustomer: [Product!]!
}

type Admin {
  id: ID! @unique
  username: String! @unique
  password: String!
  # TODO encryption?
}